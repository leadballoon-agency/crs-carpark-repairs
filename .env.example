# CRS Car Park Repair Services - Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# For MongoDB
MONGODB_URI=mongodb://localhost:27017/crs-repairs
# For PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/crs_repairs

# JWT Secret for Authentication
JWT_SECRET=your-secret-key-here-change-in-production

# AI Vision API (Replace with actual API credentials)
AI_VISION_API_KEY=your-ai-vision-api-key
AI_VISION_API_URL=https://api.example.com/vision

# Weather API
WEATHER_API_KEY=your-weather-api-key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# AWS S3 for Image/Video Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-west-2
AWS_S3_BUCKET=crs-repairs-media

# Email Configuration (SendGrid/SMTP)
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@carparkrepair.co.uk
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+447833588488

# Google Maps API (for routing and geocoding)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Stripe Payment Processing
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# Admin Credentials (Change in production!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CRS2024!

# Session Configuration
SESSION_SECRET=your-session-secret-key

# Redis Configuration (for caching/sessions)
REDIS_URL=redis://localhost:6379

# Frontend URL
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,https://carparkrepair.co.uk

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,mp4,mov,avi

# Proximity Settings
PROXIMITY_RADIUS_KM=5
PROXIMITY_DISCOUNT_PERCENTAGE=15
MULTI_SITE_DISCOUNT_THRESHOLD=3

# Business Rules
MINIMUM_JOB_VALUE=2000
QUOTE_VALIDITY_DAYS=30
GUARANTEE_YEARS=5

# Monitoring (optional)
SENTRY_DSN=your-sentry-dsn
LOGSTASH_HOST=localhost
LOGSTASH_PORT=5000